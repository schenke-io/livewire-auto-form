{
    "name": "schenke-io/livewire-auto-form",
    "description": "Enhanced livewire component to edit models and its relationships",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SchenkeIo\\LivewireAutoForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\": "workbench/",
            "Workbench\\App\\": "workbench/app/",
            "Database\\Factories\\Models\\": "workbench/database/factories/models/",
            "Database\\Seeders\\": "workbench/database/seeders/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/"
        }
    },
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/validation": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/http": "^12.0",
        "spatie/laravel-package-tools": "^1.0",
        "archtechx/enums": "^v1.1",
        "spatie/laravel-data": "^4.0",
        "nette/neon": "^3.4",
        "livewire/flux": "^2.1",
        "livewire/livewire": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "larastan/larastan": "^3.5",
        "pestphp/pest": "^4.2",
        "laravel/pint": "^1.24",
        "orchestra/testbench": "^10.2",
        "schenke-io/laravel-relation-manager": "^2.0",
        "schenke-io/packaging-tools": "^0.1",
        "spatie/laravel-ray": "^1.40",
        "barryvdh/laravel-ide-helper": "^3.5",
        "phpstan/phpstan-phpunit": "^2.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "ext-pcntl": "*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SchenkeIo\\LivewireAutoForm\\LivewireAutoFormServiceProvider"
            ]
        }
    },
    "scripts": {
        "setup": "SchenkeIo\\PackagingTools\\Setup::handle",
        "low": "composer update --prefer-lowest --prefer-dist",
        "stable": "composer update --prefer-stable --prefer-dist",
        "analyse": "./vendor/bin/phpstan analyse",
        "coverage": "vendor/bin/pest --coverage --parallel",
        "markdown": "@php vendor/bin/testbench workbench:make-readme --ansi",
        "pint": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "parallel": "vendor/bin/pest --parallel",
        "menu": "SchenkeIo\\PackagingTools\\DeveloperMenu::handle",
        "check": [
            "@pint",
            "@analyse",
            "@parallel"
        ],
        "release": [
            "@pint",
            "@analyse",
            "@coverage",
            "@markdown"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "timeout 1h php vendor/bin/testbench serve --ansi"
        ],
        "add": [],
        "build": [
            "npm run build",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
